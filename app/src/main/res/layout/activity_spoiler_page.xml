<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpoilerPage">

    <TextView
        android:id="@+id/spoilercontenttextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"
        android:textColor="@color/black"
        android:text="Spoiler Songs"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/spoilerrecyclerview"
        android:layout_below="@+id/spoilercontenttextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/returntoresultsbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:layout_below="@+id/spoilerrecyclerview"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>