<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question7">


    <TextView
        android:id="@+id/q7textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:text="Q7: What is the mood you want to feel from listening to the genre?" />

    <RadioGroup

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/q7textview"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/q7hypedbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hyped"
            tools:ignore="UsingOnClickInXml"
            />

        <RadioButton
            android:id="@+id/q7sadbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sad"
            tools:ignore="UsingOnClickInXml"
            />

        <RadioButton
            android:id="@+id/q7empoweredbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empowered"
            tools:ignore="UsingOnClickInXml"
            />

        <RadioButton
            android:id="@+id/q7nostalgicbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nostalgic"
            tools:ignore="UsingOnClickInXml"
            />
    </RadioGroup>


    <Button
        android:id="@+id/submitq7button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/q7textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:backgroundTint="#4CAF50"
        android:text="Submit" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_below="@+id/submitq7button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mood" />

</RelativeLayout>