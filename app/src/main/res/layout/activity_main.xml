<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/introtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginLeft="0dp"
        android:text="Welcome to the Music Genre Quiz App! Created by Tyler Pourmand and Kyle Lombardi"
        android:textColor="@color/black"
        android:textSize="25sp"></TextView>

    <TextView
        android:id="@+id/descriptiontext"
        android:layout_below="@+id/introtext"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_description"
        android:textSize="25sp"
        />

    <ImageView
        android:id="@+id/musicnote"
        android:layout_width="150dp"
        android:layout_height="230dp"
        android:layout_below="@+id/descriptiontext"
        android:layout_marginLeft="130dp"

        app:srcCompat="@drawable/musicnote" />

    <CheckBox
        android:id="@+id/spoilernotifcheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:text="Spoiler Notifications"
        android:layout_below="@+id/musicnote"
        android:onClick="SpoilerCheck"
        >
    </CheckBox>

    <Button
        android:id="@+id/beginbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/spoilernotifcheckbox"
        android:layout_below="@+id/musicnote"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:text="Begin"

        />




</RelativeLayout>
