<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question5">

    <TextView
        android:id="@+id/q5textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:textAlignment="center"
        android:layout_marginLeft="50dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:text="Q5: Is your music fast or slow?" />

    <RadioGroup

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/q5textview"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/q5fastbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fast"
            tools:ignore="UsingOnClickInXml"
            />

        <RadioButton
            android:id="@+id/q5slowbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slow"
            tools:ignore="UsingOnClickInXml"
            />

    </RadioGroup>


    <Button
        android:id="@+id/submitq5button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/q5textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:backgroundTint="#2196F3"
        android:text="Submit" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_below="@+id/submitq5button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/fast" />

</RelativeLayout>